<% if (req.session.user) { %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Quiz</title>
    <link href="/styles/style.css" rel="stylesheet" />
</head>
<body>
  <nav class="bg-gray-800">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 items-center justify-between">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <h1 class="text-white text-xl font-bold">QuizApp</h1>
          </div>
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-4">
              <a href="/" class="text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium">Home</a>
              <a href="/quiz/add" class="bg-gray-900 text-white rounded-md px-3 py-2 text-sm font-medium" aria-current="page">Add Quiz</a>
              <a href="/history" class="text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium">History</a>
            </div>
          </div>
        </div>
        <div class="hidden md:block">
          <div class="ml-4 flex items-center md:ml-6">
            <div class="relative ml-3">
              <div class="ml-10 flex items-baseline space-x-4">
                <h2 class="text-gray-300 hover:text-white rounded-md px-3 py-2 text-sm font-semibold"><%= req.session.username %></h2>
                <a href="/users/logout" class="text-gray-300 hover:bg-gray-700 hover:text-white rounded-md px-3 py-2 text-sm font-medium">Logout</a>
              </div>
            </div>
          </div>
        </div>
        <div class="-mr-2 flex md:hidden">
          <button id="mobile-menu-button" type="button" class="relative inline-flex items-center justify-center rounded-md bg-gray-800 p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" aria-controls="mobile-menu" aria-expanded="false">
            <span class="absolute -inset-0.5"></span>
            <span class="sr-only">Open main menu</span>
            <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
            <svg class="hidden h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  
    <div class="hidden md:hidden" id="mobile-menu">
      <div class="space-y-1 px-2 pb-3 pt-2 sm:px-3">
        <a href="/" class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium">Home</a>
        <a href="/quiz/add" class="bg-gray-900 text-white block rounded-md px-3 py-2 text-base font-medium" aria-current="page">Add Quiz</a>
        <a href="/history" class="text-gray-300 hover:bg-gray-700 hover:text-white block rounded-md px-3 py-2 text-base font-medium">History</a>
      </div>
      <div class="border-t border-gray-700 pb-3">
        <div class="mt-3 px-2">
          <h2 class="text-gray-300 hover:text-white rounded-md px-3 py-2 text-sm font-semibold"><%= req.session.username %></h2>
          <a href="/users/logout" class="block rounded-md px-3 py-2 text-base font-medium text-gray-400 hover:bg-gray-700 hover:text-white">Logout</a>
        </div>
      </div>
    </div>
  </nav>
  <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
      <h2 class="mt-5 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Create New Quiz</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
      <form action="" method="POST" id="quiz-form">
        <div class="bg-gray-600 rounded-md shadow-lg p-4">
          <label for="quiz-title" class="block text-sm font-medium leading-6 text-white">Quiz Title</label>
          <div class="mt-2">
            <input id="quiz-title" name="quiz-title" type="text" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6 p-3">
          </div>
        </div>
        <div id="questions-container">
          <div class="question bg-slate-300 rounded-lg my-2 p-4">
            <div>
              <label for="question-1" class="block text-sm font-medium leading-6 text-gray-900">Pertanyaan 1:</label>
              <div class="mt-2">
                <input id="question-1" name="question-1" type="text" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6 p-3">
              </div>
            </div>                
            <div class="answers">
              <div class="answer">
                <label for="answer-1-1" class="block text-sm font-medium leading-6 text-gray-900">Jawaban 1:</label>
                <div class="mt-2 justify-between">
                  <input id="answer-1-1" name="answer-1-1" type="text" required class="w-11/12 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6 p-3">
                  <input class="inline ml-1" type="radio" name="correct-ans-1" value="1" required>
                </div>
              </div>      
            </div>
            
            <div>
              <button type="button" class="mt-3 add-answer flex w-36 justify-center rounded-md bg-gray-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600">Tambah Jawaban</button>
            </div>
          </div>
        </div>
        
        <div>
          <button type="button" id="add-question" class="my-3 flex w-40 justify-center rounded-md bg-gray-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600">Tambah Pertanyaan</button>
        </div>
        
        <div>
          <button type="submit" class="flex w-full justify-center rounded-md bg-gray-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600">Buat Quiz</button>
        </div>
      </form>
    </div>
  </div>

  <script>
      const toggleButton = document.getElementById("mobile-menu-button");
      const toggleDiv = document.getElementById("mobile-menu");

      
      toggleButton.addEventListener("click", () => {
        toggleDiv.classList.toggle("hidden");
      });

      let questionCount = 1;
      
      document.getElementById("add-question").addEventListener("click", function() {
          questionCount++;
          const questionContainer = document.getElementById("questions-container");
          const newQuestion = document.createElement("div");
          newQuestion.className = "question bg-slate-300 rounded-lg my-2 p-4";
          newQuestion.innerHTML = `
            <div>
              <label for="question-${questionCount}" class="block text-sm font-medium leading-6 text-gray-900">Pertanyaan ${questionCount}:</label>
              <div class="mt-2">
                <input id="question-${questionCount}" name="question-${questionCount}" type="text" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6 p-3">
              </div>
            </div>                
            <div class="answers">
              <div class="answer">
                <label for="answer-${questionCount}-1" class="block text-sm font-medium leading-6 text-gray-900">Jawaban 1:</label>
                <div class="mt-2 justify-between">
                  <input id="answer-${questionCount}-1" name="answer-${questionCount}-1" type="text" required class="w-11/12 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6 p-3">
                  <input class="inline ml-1" type="radio" name="correct-ans-${questionCount}" value="1" required>
                </div>
              </div>      
            </div>
              <div>
                <button type="button" class="mt-3 add-answer flex w-36 justify-center rounded-md bg-gray-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600">Tambah Jawaban</button>
              </div>
            </div>
          `;
          questionContainer.appendChild(newQuestion);
      });
      
      document.getElementById("questions-container").addEventListener("click", function(e) {
          if (e.target.classList.contains("add-answer")) {
              const question = e.target.closest(".question");
              const answerCount = question.querySelectorAll(".answer").length + 1;
              const newAnswer = document.createElement("div");
              newAnswer.className = "answer";
              newAnswer.innerHTML = `
                  <label for="answer-${questionCount}-${answerCount}" class="block text-sm font-medium leading-6 text-gray-900">Jawaban ${answerCount}:</label>
                  <div class="mt-2 justify-between">
                    <input id="answer-${questionCount}-${answerCount}" name="answer-${questionCount}-${answerCount}" type="text" required class="w-11/12 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6 p-3">
                    <input class="inline ml-1" type="radio" name="correct-ans-${questionCount}" value="${answerCount}" required>
                  </div>
              `;
              question.querySelector(".answers").appendChild(newAnswer);
          }
      });
  </script>
</body>
</html>
<% } else { %>
  <head>
    <meta http-equiv='refresh' content='0; URL=/users/login'>
  </head>
  <section class="container">
    <h4>Redirecting..</h4>
  </section>
<% } %>